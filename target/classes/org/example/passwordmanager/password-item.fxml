<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="30.0" prefWidth="906.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.passwordmanager.UserInterface.PasswordItemController">
   <Label id="id-pass" fx:id="lbl_idPass" text="1">
      <HBox.margin>
         <Insets left="20.0" top="5.0"/>
      </HBox.margin>
   </Label>
   <Label id="date-create" text="02/29/2000">
      <HBox.margin>
         <Insets left="30.0" top="5.0"/>
      </HBox.margin>
   </Label>
   <Label id="service-name" prefHeight="23.0" prefWidth="68.0" text="Google">
      <HBox.margin>
         <Insets left="40.0"/>
      </HBox.margin>
      <padding>
         <Insets top="5.0"/>
      </padding>
   </Label>
   <TextField id="description" editable="false" text="This is the google account's password">
      <HBox.margin>
         <Insets left="70.0"/>
      </HBox.margin>
   </TextField>
   <Label id="update-rec" prefHeight="18.0" prefWidth="70.0" text="Update!">
      <HBox.margin>
         <Insets left="60.0" top="5.0"/>
      </HBox.margin>
   </Label>
   <Button minWidth="47.0" mnemonicParsing="false" onAction="#onCopyButtonClick" prefHeight="30.0" prefWidth="75.0"
           text="Copy">
      <HBox.margin>
         <Insets left="30.0"/>
      </HBox.margin>
   </Button>
   <Button minWidth="47.0" mnemonicParsing="false" onAction="#onUpdateButtonClick" prefHeight="30.0" prefWidth="74.0"
           text="Update">
      <HBox.margin>
         <Insets left="10.0"/>
      </HBox.margin>
   </Button>
   <Button id="btn-delete" minWidth="47.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" prefHeight="30.0"
           prefWidth="75.0" text="Delete">
      <HBox.margin>
         <Insets left="10.0"/>
      </HBox.margin>
   </Button>
</HBox>
